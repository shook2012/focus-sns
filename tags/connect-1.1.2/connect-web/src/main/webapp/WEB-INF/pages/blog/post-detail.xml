<?xml version="1.0" encoding="UTF-8"?>
<page parent="parent/global">
	<placeholder name="leftColumn">
		<widget name="menuWidget" path="/system/menu/custom-menu">
			<prefs>
				<menuPath>blog/menu</menuPath>
				<userRequired>true</userRequired>
			</prefs>
		</widget>
		<widget name="postCategoryWidget" path="/blog/category/list-view">
			<title>博文分类</title>
		</widget>
	</placeholder>
	<placeholder name="mainColumn">
		<widget name="postWidget" path="/blog/post/detail-view">
			<title>博文浏览</title>
		</widget>
		<widget name="commentWidget" path="/commons/comment/list-view">
			<title>评论</title>
			<prefs>
				<paramName>postId</paramName>
				<entity>Post</entity>
			</prefs>
		</widget>
	</placeholder>
</page>
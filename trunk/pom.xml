			</dependency>
			<!-- CGLib End -->
			<!-- Freemarker Begin -->
			<dependency>
				<groupId>org.freemarker</groupId>
				<artifactId>freemarker</artifactId>
				<version>2.3.16</version>
			</dependency>
			<!-- Freemarker End -->
			<!-- Java Mail Begin -->
			<dependency>
				<groupId>javax.mail</groupId>
